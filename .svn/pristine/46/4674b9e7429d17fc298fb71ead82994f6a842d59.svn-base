<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/bar_clock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="280dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <com.gotechcn.wasulauncher.view.Clock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar_date_weather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:orientation="vertical" >

        <com.gotechcn.wasulauncher.view.DateView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/bar_weather"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/weatherimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:padding="1dp" />

            <com.gotechcn.wasulauncher.view.WeatherView
                android:id="@+id/weatherView"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:padding="15dp"
            android:src="@drawable/wasu_logo_white" >
        </ImageView>
    </RelativeLayout>

</RelativeLayout>