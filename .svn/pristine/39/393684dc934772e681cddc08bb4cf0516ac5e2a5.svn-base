<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_second_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="94dp"
    android:layout_marginTop="50dp"
    android:columnCount="5"
    android:rowCount="2"
    android:visibility="gone" >

    <RelativeLayout
        android:id="@+id/setting_system_setting_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_row="0"
        android:layout_rowSpan="2" >

        <ImageView
            android:id="@+id/setting_system_setting_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2c95de"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/second_setting_text"
            android:nextFocusLeft="@id/civil_for_aged_text"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_system_setting"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_display_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_row="0" >

        <ImageView
            android:id="@+id/setting_display_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a0b635"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_display"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_download_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_row="0" >

        <ImageView
            android:id="@+id/setting_download_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#599e34"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/app_shop_text"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_download"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_network_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="2"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1" >

        <ImageView
            android:id="@+id/setting_network_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fdd34c"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/second_setting_text"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_network"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_install_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="3"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="1" >

        <ImageView
            android:id="@+id/setting_install_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#19b1fc"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/second_setting_text"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_install"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about_us_rela"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_column="4"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_row="1" >

        <ImageView
            android:id="@+id/setting_about_us_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ab61f2"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/second_setting_text"
            android:nextFocusRight="@id/app_shop_text"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:gravity="bottom|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_about_us"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>

</GridLayout>