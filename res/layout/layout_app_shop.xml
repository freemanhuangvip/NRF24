            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_music"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_appshop_life"
        android:layout_width="454dp"
