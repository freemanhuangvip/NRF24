<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_video_ondemand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:visibility="gone" >

    <RelativeLayout
        android:id="@+id/layout_vod_movie"
        android:layout_width="230dp"
        android:layout_height="370dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="150dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/video_on_demand_text"
            android:nextFocusLeft="@id/wonderful_text"
            android:scaleType="fitXY"
            android:src="@drawable/movie" />

        <TextView
            android:id="@+id/vod_movietext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="300dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_movie"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_infomation"
        android:layout_width="224dp"
        android:layout_height="182dp"
        android:layout_marginLeft="301dp"
        android:layout_marginTop="150dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_infomation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="fitXY"
            android:src="@drawable/infomation" />

        <TextView
            android:id="@+id/vod_infomationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="75dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_infomation"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_sport"
        android:layout_width="224dp"
        android:layout_height="182dp"
        android:layout_marginLeft="301dp"
        android:layout_marginTop="337dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_sport"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/video_on_demand_text"
            android:scaleType="fitXY"
            android:src="@drawable/sport" />

        <TextView
            android:id="@+id/vod_sporttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="75dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_sport"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_teleplay"
        android:layout_width="454dp"
        android:layout_height="182dp"
        android:layout_marginLeft="531dp"
        android:layout_marginTop="150dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_teleplay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="fitXY"
            android:src="@drawable/teleplay" />

        <TextView
            android:id="@+id/vod_teleplaytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="75dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_teleplay"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_column"
        android:layout_width="224dp"
        android:layout_height="182dp"
        android:layout_marginLeft="531dp"
        android:layout_marginTop="337dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_column"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/video_on_demand_text"
            android:scaleType="fitXY"
            android:src="@drawable/column" />

        <TextView
            android:id="@+id/vod_columntext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="75dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_column"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_entertainment"
        android:layout_width="224dp"
        android:layout_height="182dp"
        android:layout_marginLeft="761dp"
        android:layout_marginTop="337dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_entertainment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/video_on_demand_text"
            android:scaleType="fitXY"
            android:src="@drawable/entertainment" />

        <TextView
            android:id="@+id/vod_entertainmenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="75dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_entertainment"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_vod_children"
        android:layout_width="224dp"
        android:layout_height="370dp"
        android:layout_marginLeft="991dp"
        android:layout_marginTop="150dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/vod_children"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/video_on_demand_text"
            android:nextFocusRight="@id/civil_for_aged_text"
            android:scaleType="fitXY"
            android:src="@drawable/children" />

        <TextView
            android:id="@+id/vod_childrentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="160dp"
            android:background="@color/text_background_grey"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/str_children"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

</RelativeLayout>